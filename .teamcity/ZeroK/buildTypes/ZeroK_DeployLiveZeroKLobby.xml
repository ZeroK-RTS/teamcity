<?xml version="1.0" encoding="UTF-8"?>
<build-type xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" uuid="b292fc67-4172-4a9e-a8a7-caed78c22294" xsi:noNamespaceSchemaLocation="http://www.jetbrains.com/teamcity/schemas/9.0/project-config.xsd">
  <name>Deploy LIVE Zero-K Lobby</name>
  <description />
  <settings>
    <options>
      <option name="buildNumberPattern" value="%dep.ZeroK_StableLiveBuild.build.number%" />
    </options>
    <parameters />
    <build-runners>
      <runner id="RUNNER_22" name="Deploy ZKL" type="jetbrains_powershell">
        <parameters>
          <param name="jetbrains_powershell_bitness" value="x86" />
          <param name="jetbrains_powershell_execution" value="PS1" />
          <param name="jetbrains_powershell_script_code"><![CDATA[stop-process -name ZkLobbyServer
robocopy ZkLobbyServer\bin\release c:\projekty\zero-k.info\ZkLobbyServer /e
if errorlevel 1 (
  exit 0
)
cd c:\projekty\zero-k.info\ZkLobbyServer
.\ZkLobbyServer.exe]]></param>
          <param name="jetbrains_powershell_script_mode" value="CODE" />
          <param name="teamcity.step.mode" value="default" />
        </parameters>
      </runner>
    </build-runners>
    <vcs-settings>
      <vcs-entry-ref root-id="ZeroK_ZeroKInfrastructure1_2" />
    </vcs-settings>
    <requirements />
    <build-triggers>
      <build-trigger id="vcsTrigger" type="vcsTrigger">
        <parameters>
          <param name="quietPeriodMode" value="DO_NOT_USE" />
          <param name="triggerRules"><![CDATA[+:ZeroKLobby/**
+:Shared/**
+:Libs/**]]></param>
        </parameters>
      </build-trigger>
    </build-triggers>
    <dependencies>
      <depend-on sourceBuildTypeId="ZeroK_StableLiveBuild">
        <options>
          <option name="run-build-if-dependency-failed" value="CANCEL" />
          <option name="take-started-build-with-same-revisions" value="true" />
          <option name="take-successful-builds-only" value="true" />
        </options>
      </depend-on>
    </dependencies>
    <cleanup />
  </settings>
</build-type>

