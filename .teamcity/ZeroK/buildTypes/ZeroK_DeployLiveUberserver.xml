<?xml version="1.0" encoding="UTF-8"?>
<build-type xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" uuid="ad65fa87-4192-4786-a4f3-5a1160d59cbf" xsi:noNamespaceSchemaLocation="http://www.jetbrains.com/teamcity/schemas/9.0/project-config.xsd">
  <name>Deploy LIVE ZkLobbyServer</name>
  <description />
  <settings>
    <options>
      <option name="buildNumberPattern" value="%dep.ZeroK_StableLiveBuild.build.number%" />
    </options>
    <parameters />
    <build-runners>
      <runner id="RUNNER_18" name="Deploy Uberserver" type="simpleRunner">
        <parameters>
          <param name="command.executable" value="robocopy" />
          <param name="command.parameters" value="c:\temp\zkweb c:\projekty\zero-k.info\www /e" />
          <param name="script.content"><![CDATA[copy /Y ZkLobbyServer\bin\release\ZkLobbyServer.exe c:\projekty\zero-k.info\www\lobby
copy /Y ZkLobbyServer\release\ZkLobbyServer.version.txt c:\projekty\zero-k.info\www\lobby]]></param>
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
    </build-runners>
    <vcs-settings>
      <vcs-entry-ref root-id="ZeroK_ZeroKInfrastructure1_2" />
    </vcs-settings>
    <requirements />
    <build-triggers>
      <build-trigger id="vcsTrigger" type="vcsTrigger">
        <parameters>
          <param name="quietPeriodMode" value="DO_NOT_USE" />
          <param name="triggerRules"><![CDATA[+:ZkLobbyServer/**
+:ZkData/**
+:Shared/**
+:Libs/**]]></param>
        </parameters>
      </build-trigger>
    </build-triggers>
    <dependencies>
      <depend-on sourceBuildTypeId="ZeroK_StableLiveBuild">
        <options>
          <option name="run-build-if-dependency-failed" value="CANCEL" />
          <option name="take-started-build-with-same-revisions" value="true" />
          <option name="take-successful-builds-only" value="true" />
        </options>
      </depend-on>
    </dependencies>
    <cleanup />
  </settings>
</build-type>

